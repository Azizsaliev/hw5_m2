<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_rgt"
        android:textAllCaps="true"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:src="@drawable/ic_arrow_back"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <EditText
        android:id="@+id/edt_usn"
        android:textColorHint="@color/white"
        android:padding="15dp"
        android:hint="Username"
        android:background="@drawable/edt_bc_un"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/tv_rgt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_eml"
        android:textColorHint="@color/white"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:hint="Email"
        android:background="@drawable/edt_bc_eml"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/edt_usn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_pass"
        android:textColorHint="@color/white"
        android:padding="15dp"
        android:layout_marginTop="5dp"
        android:hint="Password"
        android:background="@drawable/edt_bc_pass"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/edt_eml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:paddingStart="30dp"
        android:paddingEnd="15dp"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:id="@+id/btn_next"
        android:text="Text"
        android:textColor="@color/black"
        android:background="@drawable/butn_next"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/edt_pass"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/img_owl"
        android:backgroundTint="@color/green"
        android:scaleType="fitXY"
        android:src="@drawable/img"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/btn_next"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="200dp"
        android:layout_height="200dp"/>
    <TextView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_owl"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:text="Trivia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>


